<Window x:Class="QuanLySach_DoAn.TrangChu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Trang Chủ - Quản lý Sách" Height="350" Width="600"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Grid Background="#F5F9FF">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400" >

            <!-- Tiêu đề -->
            <TextBlock Text="CHÀO MỪNG BẠN ĐẾN VỚI HỆ THỐNG" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="DarkBlue" 
                       TextAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Thông tin -->
            <TextBlock Text="Quản lý Sách - Phiên bản 1.0" 
                       FontSize="14" 
                       TextAlignment="Center"/>
            <TextBlock Text="Nhà phát triển: Nhan Thị Ngọc Nữ" 
                       FontSize="14" 
                       TextAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Nút -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                <Button x:Name="btnLogin" Content="Đăng Nhập" Width="120" Height="40" Margin="5"
                        Background="#2E7D32" Foreground="White" FontWeight="Bold"  
                        Click="btnLogin_Click"/>
                <Button x:Name="btnMain" Content="Hệ Thống Chính" Width="120" Height="40" Margin="5"
                        Background="#E57373" Foreground="White" FontWeight="Bold"
                        Click="btnMain_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
