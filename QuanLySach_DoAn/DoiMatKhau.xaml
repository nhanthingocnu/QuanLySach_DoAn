<Window x:Class="XAML_KHUNG_QLSach.DoiMatKhauWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đổi mật khẩu" Height="250" Width="400">

    <Grid  
        Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Mật khẩu cũ:" Margin="0,-5,0,5.4"/>
        <PasswordBox x:Name="txtMatKhauCu" Grid.Row="0" 
                      Grid.Column="1" Margin="0,-9,-0.4,0" Height="30" VerticalAlignment="Top"/>

        <Label Grid.Column="0" Content="Mật khẩu mới:" Margin="0,26,0,0.8" Grid.RowSpan="2"/>
        <PasswordBox x:Name="txtMatKhauMoi" Grid.Column="1" Margin="0,26,-0.4,26.4" Grid.RowSpan="3"/>

        <Label Grid.Row="2" Grid.Column="0" Content="Xác nhận MK mới:"/>
        <PasswordBox x:Name="txtXacNhanMK" Grid.Row="2" Grid.Column="1" Margin="0,5.2,-0.4,34.4" Grid.RowSpan="2"/>

        <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Background= "#2E7D32" Content="Xác nhận" Width="100" Margin="5" Click="BtnXacNhan_Click"/>
            <Button Background= "#B71C1C" Content="Hủy" Width="100" Margin="5" Click="BtnHuy_Click"/>

        </StackPanel>
    </Grid>
</Window>
