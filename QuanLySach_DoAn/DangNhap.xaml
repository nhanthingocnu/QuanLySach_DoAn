<Window x:Class="QuanLySach_DoAn.DangNhap"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Đăng Nhập" Height="300" Width="500">
    <Grid Background="#FFF0F8FF">
        <!-- Nền xanh rất nhạt -->

        <Label Content="Tên Đăng Nhập" 
           FontSize="18" 
           Foreground="#333333" 
           HorizontalAlignment="Left" 
           Margin="50,40,0,0" 
           VerticalAlignment="Top"/>

        <TextBox x:Name="txt_TenDangNhap" 
             FontSize="18" 
             HorizontalAlignment="Left" 
             Height="30" 
             Margin="200,40,0,0" 
             VerticalAlignment="Top" 
             Width="200"
             BorderBrush="#FFBDBDBD" 
             BorderThickness="1"/>

        <Label Content="Mật Khẩu" 
           FontSize="18" 
           Foreground="#333333"
           HorizontalAlignment="Left" 
           Margin="50,100,0,0" 
           VerticalAlignment="Top"/>

        <PasswordBox x:Name="txt_MatKhau" 
                 FontSize="18" 
                 HorizontalAlignment="Left" 
                 Height="30" 
                 Margin="200,100,0,0" 
                 VerticalAlignment="Top" 
                 Width="200"
                 BorderBrush="#FFBDBDBD" 
                 BorderThickness="1"/>

        <Button 
        Content="Đăng Nhập" 
        Click="DangNhap_Click" 
        FontSize="18" 
        HorizontalAlignment="Left" 
        Margin="180,170,0,0" 
        VerticalAlignment="Top" 
        Height="40" 
        Width="150"
        Background="#FF4CAF50"   
            Foreground="White"
            
            BorderBrush="#388E3C"
            
            BorderThickness="1"/>
    </Grid>



</Window>
